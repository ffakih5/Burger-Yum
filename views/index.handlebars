<div class="jumbotron">
  <div class="burger-image"><img src="/assets/image/burger_image" alt="burger">
<h2>Add or devour your burger of choice!</h2>
    <div class="add-burger mt-4">
    <form class="start-form">
      <div class="form-group mb-3">
        <input type="text" id="brgr" name="burger_name" class="form-control" placeholder="Burger Name"

      </div>

    </form>

    </div>

  </div>
</div>
<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each cats}}
  {{#unless sleepy}}
  {{> cats/cat-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
  {{#if sleepy}}
  {{> cats/cat-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" id="sleepy" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0" id="awake"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
